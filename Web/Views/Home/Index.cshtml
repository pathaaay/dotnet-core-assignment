@using Microsoft.AspNetCore.Http.Features
@model IEnumerable<InventoryManager.Repository.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-6">Product Table (Total: @ViewData["total_products"])</h1>
    <table class="table  mb-5">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Category</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.Category</td>
                    <td>@product.CreatedAt</td>
                    <td>
                        <a href="/Home/Edit/@product.Id" class="btn btn-primary" type="submit">Edit</a>
                        <form asp-action="Delete" asp-route-id="@product.Id" method="POST"
                            onsubmit="return confirmDelete();" style="display: inline;">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <h2 class="display-6 mt-4">Shared Product Card Demo</h2>
    <div class="d-flex flex-wrap gap-2">
        @foreach (var product in Model)
        {
            <partial name="products/_ProductCard" model="product" />
        }
    </div>
    @if (Model.Count() == 0)
    {
        <div>No Products In inventory</div>
        <a href="/Home/Add">Add new Product</a>
    }

    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete the product?");
        }
    </script>
</div>